<view class="home">
    <swiper indicator-dots="true" indicator-color="rgba(255,255,255,0.5)" indicator-active-color="#fff" autoplay="true" interval="3000" duration="500" circular="true" class="swiper">
        <block wx:for="{{bannerList}}">
            <swiper-item>
                <image src="{{item}}" class="slideImage" />
            </swiper-item>
        </block>
    </swiper>
    <view class="recommend">
        <view class="title">为您推荐</view>
        <view class="teacherList">
            <view class="teacher">
                <view class="info">
                    <image src="https://image.1911edu.com/1557726157.png" />
                    <view class="name">
                        <view class="teacherName">周超</view>
                        <view>人力公司总经理，职业指导师服务专家</view>
                    </view>
                </view>
                <view class="buttonList">
                    <text>沟通</text>
                    <text>职业规划</text>
                    <text>职场晋升</text>
                </view>
                <view class="tag">
                    <image class="" src="" />
                    <text class="icon">跳槽、工作找对目标，职业发展牛起来！</text>
                </view>
                <view class="order clearfix">
                    <view class="fl">
                        <text class="people">123</text>
                        <text>人咨询过</text>
                    </view>
                    <view class="fr">约TA</view>
                </view>
            </view>
        </view>
    </view>
</view>