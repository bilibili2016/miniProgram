// 接口
const req = require('../../../req/index')
import {
    message,
    timestampToTime
} from '../../../utils/common'
Page({

    /**
     * 页面的初始数据
     */
    data: {
        identity: '1', //用户访问类型 1 学生 2 老师
        page: 1,
        limit: 20,
        noData: {
            isShowTitle: false,
            title: '专家咨询',
            imgUrl: '',
            dataDesc: '您还没有报名任何活动~',
            btnText: '去首页看看',
            btnUrl: '/pages/home/index/index'
        },
        isTeacher: false,
        teacherList: [],
    },
    goInfo: function (e) {
        e.currentTarget.dataset.id
        wx.navigateTo({
            url: `/pages/consult/chat/chat?receiveId=${e.currentTarget.dataset.id}`
        })

    },
    getConsultationList: function () {
        req.consult.getConsultationList({
                page: this.data.page,
                limit: this.data.limit,
                type: this.data.identity
            })
            .then(res => {
                if (res.status == 0) {
                    for (let i = 0; i < res.data.length; i++) {
                        res.data[i].send_time = timestampToTime(res.data[i].send_time)
                    }
                    this.setData({
                        teacherList: this.data.teacherList.concat(res.data)
                    })
                } else {
                    message(res.msg)
                }
            })
    },
    /**
     * 生命周期函数--监听页面加载
     */
    onLoad: function (options) {
        this.getConsultationList()
    },

    /**
     * 生命周期函数--监听页面初次渲染完成
     */
    onReady: function () {

    },

    /**
     * 生命周期函数--监听页面显示
     */
    onShow: function () {

    },

    /**
     * 生命周期函数--监听页面隐藏
     */
    onHide: function () {

    },

    /**
     * 生命周期函数--监听页面卸载
     */
    onUnload: function () {

    },

    /**
     * 页面相关事件处理函数--监听用户下拉动作
     */
    onPullDownRefresh: function () {

    },

    /**
     * 页面上拉触底事件的处理函数
     */
    onReachBottom: function () {
        this.setData({
            page: this.data.page + 1
        })
        this.getConsultationList()
    },

    /**
     * 用户点击右上角分享
     */
    onShareAppMessage: function () {

    }
})