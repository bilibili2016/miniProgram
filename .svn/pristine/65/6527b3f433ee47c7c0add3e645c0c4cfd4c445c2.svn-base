page {
    min-height: 100%;
    background-color: #f5f5f5;
}

.list {}

.bottom .item {
    position: relative;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    background-color: #fff;
    box-sizing: border-box;
}

.bottom .item .itemCon {
    width: 686rpx;
    height: 98rpx;
    position: relative;
    margin: 0 50rpx 0 30rpx;
    border-bottom: 1rpx solid #E0E0E1;
}

.bottom .item .leftIcon {
    position: absolute;
    left: 0;
    top: 10rpx;

}

.bottom .item .inner {
    font-size: 30rpx;
    color: #303030;
}

.bottom .item .rightIcon {
    position: absolute;
    top: 0;
    right: 0;
}

.bottom .item .rightIcon .icon {
    /* display: inline-block;
    vertical-align: middle; */
    font-size: 30rpx;
    font-weight: 900;
    color: #C7C8CC;
}

.bottom .item .alert {
    display: inline-block;
    vertical-align: middle;
    width: 38rpx;
    height: 28rpx;
    text-align: center;
    line-height: 28rpx;
    background-color: #FF4A3A;
    color: #fff;
    font-size: 24rpx;
    border-radius: 16rpx;
    margin-right: 30rpx;
    margin-bottom: 11rpx;
}

.bottom .item.marginBox {
    margin-bottom: 20rpx;
}

.bottom .item.marginBox .itemCon {
    border: none !important;

}

.bottom .list .item:last-child .itemCon {
    border: none !important;
}

.inputCon {
    position: relative;
    width: 100%;
    background-color: #fff;
    box-sizing: border-box;
    padding: 0 32rpx;
}

.inputCon .inner {
    font-size: 30rpx;
    color: #303030;
    padding-top: 25rpx;
}

.inputCon .textareaInner {
    font-size: 30rpx;
    color: #303030;
    padding: 25rpx 0;
}

.inputCon .inputText {
    height: 100rpx;
    line-height: 100rpx;
}

.inputCon .inputText input {
    height: 100rpx;
    border-bottom: 1rpx solid #E0E0E1;
    font-size: 28rpx;
    color: #ADADAD;
    box-sizing: border-box;
}


.inputCon .areaText {
    position: relative;
    padding-bottom: 30rpx;

}

.reset {
    position: absolute;
    right: 0;
    bottom: 20rpx;
    font-size: 24rpx;
    color: #ADADAD;
}

.inputCon .areaText textarea {
    width: 686rpx;
    min-height: 300rpx;
    font-size: 28rpx;
    color: #ADADAD;
    box-sizing: border-box;
}

.bottom .btn {
    position: absolute;
    left: 30rpx;
    bottom: 40rpx;
    width: 686rpx;
    height: 88rpx;
    line-height: 88rpx;
    background-color: #6317A5;
    text-align: center;
    font-size: 32rpx;
    color: #fff;
    border-radius: 10rpx;
}

.bottom .item.img {
    height: 150rpx;
    line-height: 150rpx;
}

.bottom .item.img .itemCon {
    height: 148rpx
}

.headImg {
    display: inline-block;
    vertical-align: middle;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin: 25rpx 0;
    margin-right: 30rpx;

}

.bottom .item.img .rightIcon .icon {
    display: inline-block;
    vertical-align: middle;
}