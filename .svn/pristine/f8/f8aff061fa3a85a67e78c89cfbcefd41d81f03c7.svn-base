// miniprogram/pages/professor/detail/detail.js
const req = require('../../../../req/index')
Page({
    /**
     * 页面的初始数据
     */
    data: {
        showDown: true,
        showRegister: false,
        showPlayBtn: true,
        videoContext: '',
        isScroll: true,
        teacherID: '',
        detail: "",
        isShowBTn: false,
        isAuto: false,
    },
    onClose() {
        this.setData({
            showRegister: false,
            isScroll: true
        })
    },
    palyVideo: function () {
        this.setData({
            showPlayBtn: false
        })
        this.videoContext.play()
    },
    ask: function () {
        this.setData({
            showRegister: true,
            isScroll: false
        })
    },
    closeReg: function (e) {
        this.setData({
            showRegister: e.detail.data,
            isScroll: true
        })
    },
    getPhoneNumber(e) {
        if (e.detail.errMsg == 'getPhoneNumber:fail user deny') {
            this.ask()
        } else {
            // 允许使用用户手机号 可以进行下一步操作
        }
    },
    handleLink: function (params) {
        wx.navigateTo({
            url: '/pages/home/appointment/appointment'
        })
    },
    handleDown() {
        this.setData({
            showDown: false,
            isAuto: true
        })
    },
    handlePull() {
        this.setData({
            showDown: true,
            isAuto: false
        })
    },
    getTeacherDetail() {
        req.home.getTeacherDetail({
                teacher_id: this.data.teacherID
            })
            .then(res => {
                if (res.status == 0) {
                    this.setData({
                        detail: res.data.teacherInfo
                    })
                    wx.createSelectorQuery().select('#aboutInner').boundingClientRect(rect => {
                        if (rect.height > 200) {
                            this.setData({
                                isShowBTn: true,
                            })
                        }
                    }).exec()
                }
            })
    },
    /**
     * 生命周期函数--监听页面加载
     */
    onLoad: function (options) {
        this.setData({
            teacherID: options.id
        })
        wx.setNavigationBarTitle({
            title: '个人主页'
        })
        this.getTeacherDetail()
    },
    /**
     * 生命周期函数--监听页面初次渲染完成
     */
    onReady(res) {
        this.videoContext = wx.createVideoContext('myVideo')
    },
    /**
     * 生命周期函数--监听页面显示
     */
    onShow: function () {},

    /**
     * 生命周期函数--监听页面隐藏
     */
    onHide: function () {},

    /**
     * 生命周期函数--监听页面卸载
     */
    onUnload: function () {},

    /**
     * 页面相关事件处理函数--监听用户下拉动作
     */
    onPullDownRefresh: function () {},

    /**
     * 页面上拉触底事件的处理函数
     */
    onReachBottom: function () {},

    /**
     * 用户点击右上角分享
     */
    onShareAppMessage: function () {}
})