page {
    min-height: 100%;
    background-color: #f5f5f5;
}

.info {
    background-color: #fff;
    height: 228rpx;
    display: flex;
    align-items: center;
    padding: 0 30rpx;
}

.info .text {
    width: 500rpx;
    text-align: left;
}

.headImg {
    width: 130rpx;
    height: 130rpx;
    border-radius: 50%;
    overflow: hidden;
    box-shadow: 0rpx 3rpx 7rpx 0rpx rgba(176, 176, 176, 0.3);
    border: 4rpx solid rgba(255, 255, 255, 1);
}

.headImg image {
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    overflow: hidden;
}

.right {
    width: 24rpx;
    height: 24rpx;
    margin-left: 15rpx;
}

.activity {
    background-color: #F5F5F5;
    padding-top: 40rpx;
}

.title {
    width: 330rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    margin: 0 auto 40rpx;
    background: url('https://h5-image.1911edu.com/mini-activity.png') no-repeat;
    background-size: contain;
    background-position: center;
}

.title image {
    width: 36rpx;
    height: 36rpx;
    margin-right: 5rpx;
}

.actvList {
    width: 686rpx;
    margin: 0 auto 40rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 20px;
}

.actvList .cover {
    width: 100%;
    height: 330rpx;
}

.actvList .word {
    height: 90rpx;
    line-height: 90rpx;
    padding: 0 30rpx;
    font-size: 28rpx;
}

.actvList .word image {
    width: 20rpx;
    height: 24rpx;
    margin-right: 10rpx;
}

.actvList .word .people {
    color: #303030;
}

.actvList .word .text {
    color: #87868B;
}