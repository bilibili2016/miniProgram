/* pages/home/activity/home/home.wxss */
page {
    height: 100%;
    overflow-y: hidden;
}

.container {
    height: 100%;

}

.flex-wrp {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.flex-item {
    font-size: 32rpx;
    line-height: 88rpx;
}

.checked {
    color: #6317A5;
}

.banner {
    width: 100%;
}

.bannerImg {
    width: 100%;
}

.content {
    width: 100%;
    position: relative;
    padding-top: 180rpx;
}

.content .top {
    position: absolute;
    top: -120rpx;
    left: 50%;
    width: 686rpx;
    margin: 0 0 30rpx -343rpx;
    background-color: #fff;
    padding: 40rpx 45rpx;
    border-radius: 20rpx;
    box-shadow: 0px 2rpx 21rpx 0px rgba(182, 140, 140, 0.21);
    box-sizing: border-box;
}

.content .top .left,
.content .top .right {
    float: left;
    line-height: 58rpx;
    font-size: 28rpx;
    vertical-align: middle;
}

.content .top .right {
    float: right;
}

.content .top image {
    width: 58rpx;
    height: 58rpx;
    margin-right: 20rpx;
    vertical-align: middle;
}

.top .free {
    width: 600rpx;
    height: 82rpx;
    line-height: 82rpx;
    text-align: center;
    background: rgba(246, 70, 61, 1);
    box-shadow: 0px 4rpx 10rpx 0rpx rgba(231, 71, 63, 0.4);
    border-radius: 49rpx;
    margin: 0 auto;
    font-size: 32rpx;
    color: #fff;
    margin-top: 40rpx;
}

.inner {
    text-align: center;
}

.inner .text {
    position: relative;
    font-size: 30rpx;
    color: #303030;
    width: 545rpx;
    margin: 0 auto;
    margin-top: 60rpx;
    text-indent: 2em;
}

.inner view.text::before {
    width: 118rpx;
    height: 50rpx;
    content: "";
    display: block;
    position: absolute;
    top: -30rpx;
    left: -50rpx;
    background: url('https://h5-image.1911edu.com/mini-lineIcon.png') no-repeat;
    background-size: 118rpx 50rpx;
}

.inner view.text::after {
    width: 118rpx;
    height: 50rpx;
    content: "";
    display: inline-block;
    position: absolute;
    bottom: -30rpx;
    right: -50rpx;
    background: url('https://h5-image.1911edu.com/mini-lineIcon.png') no-repeat;
    background-size: 118rpx 50rpx;
    transform: rotate(180deg)
}

.inner .title {
    width: auto;
    display: inline-block;
    position: relative;
    font-size: 48rpx;
    color: #303030;
    text-align: center;
    margin: 80rpx auto 45rpx;
    font-weight: 600;
    z-index: 10;
}

.inner .title::before {
    position: absolute;
    left: -20rpx;
    top: -10rpx;
    content: "";
    width: 40px;
    height: 40px;
    background: url('https://h5-image.1911edu.com/mini-titleLeft.png') no-repeat;
    background-size: 40rpx 40rpx;
    z-index: -1;
}

.inner .title::after {
    width: 26rpx;
    height: 54rpx;
    position: absolute;
    right: -25rpx;
    bottom: 10rpx;
    content: "";
    background: url('https://h5-image.1911edu.com/mini-titleRight.png') no-repeat;
    background-size: 26rpx 54rpx;
}

.inner .desc {
    font-size: 36rpx;
    color: #E7473F;
    line-height: 52rpx;
    text-align: center;
    font-weight: bold;
}

.inner .teacher {
    width: 100%;
}

.question {
    /* text-align: left; */
}

.item {
    padding: 0 33rpx;
    margin-bottom: 40rpx;
    text-align: left;
}

.item .itemIndex {
    font-size: 34rpx;
    color: #303030;
    font-weight: bold;
}

.item .itemText {
    font-size: 28rpx;
    color: #757478;
    margin-top: 20rpx;
}

.btn {
    width: 100%;
    height: 98rpx;
    line-height: 98rpx;
    background-color: #F6463D;
    text-align: center;
    font-size: 32rpx;
    color: #fff;
}

.applyPop {
    width: 100%;
}

.applyPop .con {
    padding: 40rpx 35rpx;
}

.applyPop .identity {
    background-color: #fff;

    margin-bottom: 40rpx;
}

.applyPop .applyLeft {
    font-size: 38rpx;
    color: #303030;
    font-weight: 500;
    margin-bottom: 40rpx;
}

.applyPop .identity .cross {
    position: absolute;
    top: 40rpx;
    right: 35rpx;
    font-size: 28rpx;
    font-weight: bold;
    color: #87868B;
}

.applyPop .sectionRadio {}

.applyPop .sectionRadio radio-group {
    margin-bottom: 40rpx;
    display: flex;
    justify-content: space-around;
}

.applyPop .sectionRadio label {
    width: 328rpx;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    color: #000;
    font-size: 30rpx;
    border-radius: 10rpx;
    background-color: #f5f5f5;
    border: 2rpx solid rgba(231, 71, 63, 0);
}

.applyPop .sectionRadio label radio {
    display: none;
}

.applyPop .sectionRadio label.checked {
    border: 2rpx solid rgba(231, 71, 63, 1);
    position: relative;
}

.applyPop .sectionRadio label.checked:after {
    content: '';
    display: block;
    width: 57rpx;
    height: 42rpx;
    position: absolute;
    bottom: -2rpx;
    right: 0;
    background: url('https://h5-image.1911edu.com/mini-checked.png') no-repeat;
    background-size: contain;
    border-bottom-right-radius: 10rpx;
}

.applyPop .section {
    width: 686rpx;
    height: 88rpx;
    background: rgba(245, 245, 245, 1);
    border-radius: 10rpx;
    margin: 0 auto 30rpx;
}

.applyPop .section input {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    padding-left: 30rpx;
    font-size: 30rpx;
}

.applyPop .section.code {
    display: flex;
}

.applyPop .section.code input {
    flex: 1;
}

.applyPop .section.code .sectionCode {
    width: 180rpx;
    height: 24rpx;
    text-align: center;
    line-height: 28rpx;
    padding: 0 15rpx;
    font-size: 30rpx;
    margin-top: 29rpx;
    border-left: 1rpx solid #c7c8cc;
    color: #f6463d;
}

.applyPop .desc {
    font-size: 24rpx;
    color: #87868B;
    margin: 30rpx 0;
    text-align: center;
}

.applyPop .desc .pro {
    color: #317FE8;
}

.applyPop .applyBtn button {
    width: 688rpx;
    height: 88rpx;
    background: rgba(246, 70, 61, 1);
    border-radius: 10rpx;
    color: #fff;
    margin: 0 auto;
}

.mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background-color: rgba(0, 0, 0, .3);
    z-index: 100
}

.registerMask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background-color: rgba(0, 0, 0, .3);
}