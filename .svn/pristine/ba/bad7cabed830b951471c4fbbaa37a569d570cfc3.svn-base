/* miniprogram/pages/user/beTeacher/index/index.wxss */
page {
  min-height: 100%;
  background-color: #f5f5f5;
}


.bottom {}

.bottom .twos {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 0 50rpx 0 30rpx;
}

.bottom .item {
  background-color: #fff;
  position: relative;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #E0E0E1;
  box-sizing: border-box;
}

.bottom .item:last-child {
  border: none;
}

.bottom .item .leftIcon {
  position: absolute;
  left: 0;
  top: 10rpx;

}

.bottom .item .inner {
  font-size: 30rpx;
  color: #303030;
  margin-left: 60rpx;
}

.bottom .item .rightIcon {
  position: absolute;
  top: 0;
  right: 0;
}

.bottom .item .rightIcon .icon {
  /* display: inline-block;
    vertical-align: middle; */
  font-size: 30rpx;
  font-weight: 900;
  color: #C7C8CC;
}

.bottom .item .alert {
  display: inline-block;
  vertical-align: middle;
  width: 38rpx;
  height: 28rpx;
  text-align: center;
  line-height: 28rpx;
  background-color: #FF4A3A;
  color: #fff;
  font-size: 24rpx;
  border-radius: 16rpx;
  margin-right: 30rpx;
  margin-bottom: 11rpx;
}