/* miniprogram/pages/user/beTeacher/label/list/list.wxss */
page {
  width: 100%;
  height: 100%;
}

.labelList {
  position: relative;
  height: 100%;
  padding: 50rpx 32rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.labelList .item {
  margin-bottom: 50rpx;
}

.labelList .item .title {
  font-size: 34rpx;
  color: #303030;
  font-weight: bold;
}

.labelList .item .tag {
  display: inline-block;
  vertical-align: middle;
  box-sizing: border-box;
  padding: 24rpx 32rpx;
  background-color: #F5F5F5;
  font-size: 28rpx;
  color: #303030;
  margin: 30rpx 20rpx 0 0;
  border-radius: 44rpx;
  border: 1px solid #F5F5F5;
}

.labelList .item .tag.checked {
  color: #6317A5;
  border-color: #6317A5;
}

.btn {
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
}

.btn text {
  display: inline-block;
  vertical-align: middle;
  width: 50%;
  height: 98rpx;
  text-align: center;
  line-height: 98rpx;
  font-size: 32rpx;
}


.btn text.reset {
  color: #87868B;
  border-top: 1rpx solid #E0E0E1;
}

.btn text.finish {
  color: #fff;
  border-top: 1rpx solid #6317A5;
  background-color: #6317A5;
}