page {
  min-height: 100%;
  background-color: #f5f5f5;
}

.actvList {
  position: relative;
  width: 686rpx;
  margin: 0 auto 40rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 20px;
}

.actvList .cover {
  width: 100%;
  height: 330rpx;
}

.actvList .word {
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.actvList .word image {
  width: 20rpx;
  height: 24rpx;
  margin-right: 10rpx;
}

.actvList .word .people {
  color: #303030;
}

.actvList .word .text {
  color: #87868B;
}

.actvList .time {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  /* width: 270rpx; */
  height: 48rpx;
  line-height: 48rpx;
  background: rgba(0, 0, 0, 0.55);
  border-radius: 31rpx;
  font-size: 24rpx;
  color: #fff;
  padding: 0 12rpx;
}

.actvList .time .icon {
  display: inline-block;
  vertical-align: middle;
  font-size: 42rpx;
  margin-right: 10rpx;
}

.actvList .time .icon view {
  margin-top: 4rpx;
}

.actvList .time text {
  display: inline-block;
  vertical-align: middle;
}