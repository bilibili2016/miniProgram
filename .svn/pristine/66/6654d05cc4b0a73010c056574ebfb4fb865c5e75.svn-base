page {
    min-height: 100%;
    background-color: #f5f5f5;
}

.user {
    padding-bottom: 100rpx;
}

.top {
    background-color: #fff;
}

.info {
    background-color: #fff;
    /* padding: 0 30rpx; */
    text-align: center;
    padding-bottom: 50rpx;
}

.info .text {
    font-size: 38rpx;
    color: #303030;
    margin-top: 30rpx;
}

.headImg {
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    overflow: hidden;
    box-shadow: 0rpx 3rpx 7rpx 0rpx rgba(176, 176, 176, 0.3);
    border: 4rpx solid rgba(255, 255, 255, 1);
    margin: 0 auto;
}

.headImg image {
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    overflow: hidden;
}

.top .vip {
    width: 100%;
    height: 76rpx;
    background: linear-gradient(360deg, rgba(221, 221, 221, .5) 0%, rgba(255, 255, 255, 0) 100%);
}

.top .vipInner {
    background-color: #000;
    width: 686rpx;
    height: 76rpx;
    line-height: 76rpx;
    margin: 0 auto;
    padding: 0 20rpx 0 30rpx;
    box-sizing: border-box;
}

.top .vip .desc {
    display: inline-block;
    vertical-align: middle;
    font-size: 30rpx;
    color: #896236;
}

.top .vip .num {
    display: inline-block;
    vertical-align: middle;
    font-size: 26rpx;
    color: #896236;
    margin: 0 30rpx 0 100rpx;
}

.top .vip .btn {
    display: inline-block;
    vertical-align: middle;
    width: 126rpx;
    height: 42rpx;
    line-height: 42rpx;
    text-align: center;
    background: linear-gradient(90deg, rgba(255, 236, 187, 1) 0%, rgba(242, 216, 156, 1) 100%);
    border-radius: 31rpx;
    font-size: 24rpx;
    color: #896236;
}

.bottom {}


.bottom .item {
    position: relative;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    background-color: #fff;

    box-sizing: border-box;
}

.bottom .item .itemCon {
    width: 686rpx;
    height: 98rpx;
    position: relative;
    margin: 0 50rpx 0 30rpx;
    border-bottom: 1rpx solid #E0E0E1;
}

.bottom .item .leftIcon {
    position: absolute;
    left: 0;
    top: 10rpx;

}

.bottom .item .inner {
    font-size: 30rpx;
    color: #303030;
    margin-left: 60rpx;
}

.bottom .item .rightIcon {
    position: absolute;
    top: 0;
    right: 0;
}

.bottom .item .rightIcon .icon {
    /* display: inline-block;
    vertical-align: middle; */
    font-size: 30rpx;
    font-weight: 900;
    color: #C7C8CC;
}

.bottom .item .alert {
    display: inline-block;
    vertical-align: middle;
    width: 38rpx;
    height: 28rpx;
    text-align: center;
    line-height: 28rpx;
    background-color: #FF4A3A;
    color: #fff;
    font-size: 24rpx;
    border-radius: 16rpx;
    margin-right: 30rpx;
    margin-bottom: 11rpx;
}

.bottom .item.marginBox {
    margin-bottom: 20rpx;
}

.bottom .item.marginBox .itemCon {
    border: none !important;

}

.bottom .list .item:last-child .itemCon {
    border: none !important;
}

.bottom .btn {
    width: 686rpx;
    height: 88rpx;
    line-height: 88rpx;
    background-color: #fff;
    margin: 30rpx auto 50rpx;
    text-align: center;
    font-size: 30rpx;
    color: #6317A5;
}