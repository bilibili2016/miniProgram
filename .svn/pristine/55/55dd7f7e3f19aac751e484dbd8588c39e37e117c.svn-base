<view class="bindTel">
  <view class="input">
    <input type="text" placeholder="请输入要绑定的手机号" bindinput="inputPhone" />
  </view>
  <view class="input codeCon">
    <input type="text" placeholder="请输入短信验证码" bindinput="inputCode" />
    <text class="code" bindtap="getCode">{{countDown==61?'获取验证码':countDown}}</text>
  </view>
  <view class="btn" bindtap="formSubmit">完成</view>
</view>