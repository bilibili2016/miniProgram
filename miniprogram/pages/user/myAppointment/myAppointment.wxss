page {
    min-height: 100%;
    background-color: #f5f5f5;
}

.mine {
    padding-top: 40rpx;
}

.actvList {
    position: relative;
}

.actvList,
.appoList .item,
.teacherList .item {
    position: relative;
    width: 686rpx;
    margin: 0 auto 40rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 20rpx;
    overflow: hidden;
}

.actvList .desc {
    position: absolute;
    top: 0;
    left: 0;
    width: 84rpx;
    height: 42rpx;
    line-height: 42rpx;
    border-radius: 20rpx 0 20rpx 0;
    background-color: #FE7918;
    font-size: 24rpx;
    color: #fff;
    font-weight: 500;
    text-align: center;
}

.actvList .cover {
    width: 100%;
    height: 330rpx;
}

.actvList .word {
    height: 90rpx;
    line-height: 90rpx;
    padding: 0 30rpx;
    font-size: 28rpx;
}

.actvList .word image {
    width: 20rpx;
    height: 24rpx;
    margin-right: 10rpx;
}

.actvList .word .people {
    color: #303030;
}

.actvList .word .text {
    color: #87868B;
}

.actvList .time {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    line-height: 48rpx;
    background: rgba(0, 0, 0, 0.55);
    border-radius: 31rpx;
    font-size: 0;
    color: #fff;
    padding: 5rpx 12rpx;
}

.actvList .time .icon {
    display: inline-block;
    vertical-align: middle;
    height: 36rpx;
    margin-right: 10rpx;
}

.actvList .time .clock {
    display: inline-block;
    vertical-align: middle;
    font-size: 24rpx;
}

.appoList .item,
.teacherList .item {
    padding: 30rpx 25rpx;
    padding-bottom: 0;
    box-sizing: border-box;
}

.appoList .item .info .fl {
    width: 90rpx
}

.appoList .item .info .fr {
    width: 520rpx;
}


.appoList .item .info .headImg {
    display: inline-block;
    vertical-align: middle;
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    margin-right: 30rpx;
}

.appoList .item .info .name {
    width: 360rpx;
    display: inline-block;
    vertical-align: middle;
    font-size: 30rpx;
    color: #303030;
    font-weight: 500;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

