.appoList .item .info .status {
    position: absolute;
    top: 40rpx;
    right: 24rpx;
    font-size: 26rpx;
}

.confirming {
    color: #FF4A3A;
}

.confirmed {
    color: #23C27D;
}

.cancel {
    color: #87868B
}

.finished {
    color: #87868B;
}

.appoList .item .info .desc {
    font-size: 24rpx;
    color: #87868B;
    margin-top: 10rpx;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.appoList .item .log {
    margin-top: 20rpx;
    font-size: 26rpx;
    color: #303030;
    padding-bottom: 30rpx;
    box-sizing: border-box;
}

.appoList .item .log .topic {
    margin-bottom: 10rpx;
    width: 100%;
    overflow: hidden;
}

.appoList .item .log .topic:last-child {
    margin-bottom: 0
}

.appoList .item .log .topic image {
    display: inline-block;
    width: 22rpx;
    height: 20rpx;
    margin-right: 12rpx;
    vertical-align: middle;
}

.appoList .item .log .topic .text {
    display: inline-block;
    width: 600rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    vertical-align: middle;
}

.appoList .item .operate {
    position: relative;
    height: 117rpx;
    line-height: 117rpx;
    border-top: 1rpx solid #E0E0E1;
}

.appoList .item .operate .time {
    /* width: 100rpx; */
    display: inline-block;
    vertical-align: middle;
    font-size: 26rpx;
    color: #87868B;
    /* margin-top: 30rpx; */
    padding-left: 40rpx;

}

.appoList .item .operate .time text {
    display: inline-block;
    vertical-align: middle;
    margin-bottom: 10rpx;
}

.teacherList .item .operate .address {
    position: relative;
    font-size: 26rpx;
    color: #87868B;
    margin-top: 30rpx;
    padding-left: 40rpx;
}

.appoList .item .operate .time van-icon {
    position: absolute;
    top: 6rpx;
    left: 0;
    font-size: 32rpx;
}

.teacherList .item .operate .address van-icon {
    position: absolute;
    top: 3rpx;
    left: 0;
    font-size: 32rpx;
}

.appoList .item .operate .btn {
    position: absolute;
    top: 0;
    right: 0;
    display: inline-block;
    vertical-align: middle;
    text-align: right;
    margin-bottom: 10rpx;
}

.appoList .item .operate .btn view {
    display: inline-block;
    vertical-align: middle;
    width: 120rpx;
    height: 52rpx;
    text-align: center;
    line-height: 52rpx;
    margin-right: 15rpx;
    border-radius: 30rpx;
    font-size: 24rpx;
}

.appoList .item .operate .btn view:last-child {
    margin-right: 0
}

.appoList .item .operate .btn view.cancle {
    background-color: #fff;
    border: 1rpx solid #9B9B9B;
    color: #5E5E5E;
}

.appoList .item .operate .btn view.confirmBtn {
    background-color: #6317A5;
    color: #fff;
    margin-left: 20rpx;
}

.appoList .item .operate .btn view.pay {
    background-color: #6317A5;
    color: #fff;
}


.teacherList {
    padding-top: 40rpx;
}

.teacherList .item {
    padding: 35rpx 30rpx;
}

.teacherList .item .name {
    width: 500rpx;
    font-size: 32rpx;
    color: #303030;
    font-weight: 500;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.teacherList .status {
    position: absolute;
    top: 46rpx;
    right: 30rpx;
    font-size: 26rpx;
}

.teacherList .confirming {
    color: #FF4A3A;
}

.teacherList .confirmed {
    color: #23C27D;
}

.teacherList .cancel {
    color: #87868B;
}

.teacherList .log {
    font-size: 26rpx;
    color: #303030;
    margin: 15rpx 0 30rpx 0;
    overflow: hidden;
}

.teacherList .log image {
    display: inline-block;
    vertical-align: middle;
    width: 26rpx;
    height: 26rpx;
    margin-right: 10rpx;
}

.teacherList .log .text {
    display: inline-block;
    width: 590rpx;
    vertical-align: middle;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.teacherList .operate {
    position: relative;
}

.teacherList .operate .time,
.teacherList .operate .address {
    font-size: 26rpx;
    color: #87868B;
}

.teacherList .operate .time {
    margin-bottom: 27rpx;
}

.teacherList .btn {
    /* position: absolute;
    right: 0;
    bottom: 0; */
    text-align: right
}

.teacherList .btn view {
    display: inline-block;
    vertical-align: middle;
    width: 126rpx;
    height: 54rpx;
    text-align: center;
    line-height: 54rpx;
    font-size: 24rpx;
    border: 1rpx solid #5E5E5E;
    margin-left: 20rpx;
    border-radius: 31rpx;
}

.teacherList .cancel {
    border-color: #5E5E5E;
    color: #5E5E5E;
}

.teacherList .confirmBtn {
    background-color: #6317A5;
    color: #fff;
}