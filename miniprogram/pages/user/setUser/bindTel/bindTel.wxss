.bindTel {}

.bindTel .input {
  width: 100%;
  height: 100rpx;
  border-bottom: 1rpx solid #E0E0E1;
}

.bindTel .input input {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 26rpx;
  color: #ADADAD;
  padding-left: 20rpx;
}

.codeCon input {
  width: 74%;
  display: inline-block;
  vertical-align: middle;
}

.codeCon .code {
  display: inline-block;
  vertical-align: middle;
  width: 20%;
  height: 100%;
  line-height: 100rpx;
  text-align: center;
  font-size: 26rpx;
  color: #6317A5;
}

.btn {
  width: 686rpx;
  height: 88rpx;
  margin: 50rpx auto;
  line-height: 88rpx;
  background-color: #6317A5;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  border-radius: 10rpx;
}