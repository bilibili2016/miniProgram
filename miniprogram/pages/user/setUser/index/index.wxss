page {
    min-height: 100%;
    background-color: #f5f5f5;
}


.bottom .item {
    position: relative;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    background-color: #fff;

    box-sizing: border-box;
}

.bottom .item .itemCon {
    width: 686rpx;
    height: 98rpx;
    position: relative;
    margin: 0 50rpx 0 30rpx;
    border-bottom: 1rpx solid #E0E0E1;
}

.bottom .item .leftIcon {
    position: absolute;
    left: 0;
    top: 10rpx;

}

.selectorItem {
    position: relative;
}

.selectorItem picker {
    width: 100%;
    height: 98rpx;
    position: absolute;
    top: 0;
    left: 0;
}

.bottom .item.selectorItem .rightIcon {
    right: 32rpx;
}

.bottom .item .inner {
    font-size: 30rpx;
    color: #303030;
    /* margin-left: 60rpx; */
}

.bottom .item .rightIcon {
    position: absolute;
    top: -8rpx;
    right: 0;
    width: 100%;
    text-align: right;

}

.bottom .item .rightIcon view {
    display: inline-block;
    vertical-align: middle;
}

.bottom .rightIcon .rightInfo {
    font-size: 26rpx;
    color: #ADADAD;
    margin-bottom: -5rpx;
    margin-right: 10rpx;
    max-width: 400rpx;
    height: 100rpx;
    overflow: hidden;
}


.bottom .item .rightIcon .icon {
    /* display: inline-block;
    vertical-align: middle; */
    font-size: 30rpx;
    font-weight: 900;
    color: #C7C8CC;
}

.bottom .item .rightIcon .noIcon {
    margin-right: 35rpx;
}

.bottom .item .alert {
    display: inline-block;
    vertical-align: middle;
    width: 38rpx;
    height: 28rpx;
    text-align: center;
    line-height: 28rpx;
    background-color: #FF4A3A;
    color: #fff;
    font-size: 24rpx;
    border-radius: 16rpx;
    margin-right: 30rpx;
    margin-bottom: 11rpx;
}

.bottom .item.marginBox {
    margin-bottom: 20rpx;
}

.bottom .item.marginBox .itemCon {
    border: none !important;

}

.bottom .list .item:last-child .itemCon {
    border: none !important;
}

.bottom .btn {
    /* position: absolute;
  left: 30rpx;
  bottom: 40rpx; */
    width: 686rpx;
    height: 88rpx;
    line-height: 88rpx;
    background-color: #6317A5;
    text-align: center;
    font-size: 32rpx;
    color: #fff;
    border-radius: 10rpx;
    margin: 50rpx auto;
}

.bottom .item.img {
    height: 150rpx;
    line-height: 150rpx;
}

.bottom .item.img .itemCon {
    height: 148rpx
}

.headImg {
    display: inline-block;
    vertical-align: middle;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin: 25rpx 0;
    margin-right: 30rpx;

}

.bottom .item.img .rightIcon .icon {
    display: inline-block;
    vertical-align: middle;
}